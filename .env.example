# Data backend (default local)
VITE_DATA_BACKEND=local   # local | firebase | supabase

# Auth backend (default local)
VITE_AUTH_BACKEND=local   # local | firebase | supabase

# Firebase (if using)
VITE_FIREBASE_API_KEY=YOUR_API_KEY
VITE_FIREBASE_AUTH_DOMAIN=YOUR_DOMAIN
VITE_FIREBASE_PROJECT_ID=YOUR_PROJECT_ID
VITE_FIREBASE_STORAGE_BUCKET=YOUR_BUCKET
VITE_FIREBASE_MESSAGING_SENDER_ID=YOUR_SENDER_ID
VITE_FIREBASE_APP_ID=YOUR_APP_ID

# Supabase (if using)
VITE_SUPABASE_URL=https://YOUR-PROJECT.supabase.co
VITE_SUPABASE_ANON_KEY=YOUR-ANON-KEY

# API Configuration
VITE_API_URL=http://localhost:3001/api
VITE_API_KEY=your_api_key_here

# Features
VITE_ENABLE_DEMO_MODE=true
VITE_ENABLE_AUDIT_LOG=true
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ML_PREDICTIONS=false
VITE_ENABLE_REALTIME=true

# Security
VITE_ENABLE_CSP=true
VITE_ENABLE_RATE_LIMITING=true
VITE_MAX_LOGIN_ATTEMPTS=5

# Analytics (optional)
VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X
VITE_SENTRY_DSN=https://your_key@sentry.io/project_id

# WebSocket Configuration
VITE_WS_URL=ws://localhost:3001