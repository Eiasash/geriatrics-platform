    {
      "id": "pain-assessment-protocol",
      "title": "Geriatric Pain Assessment and Management Protocol",
      "category": "Pain Management",
      "lastUpdated": "2024-02-15",
      "version": "1.9",
      "steps": [
        {
          "step": 1,
          "title": "Pain Screening",
          "description": "All patients on admission and regularly",
          "frequency": {
            "acute": "Every 4 hours",
            "chronic": "Every shift",
            "postProcedure": "Every 1-2 hours x 24 hours"
          },
          "question": "Are you experiencing any pain or discomfort?"
        },
        {
          "step": 2,
          "title": "Pain Assessment Tools",
          "description": "Use appropriate tool for cognitive level",
          "cognitivelyIntact": {
            "tool": "Numeric Rating Scale (0-10)",
            "alternative": "Verbal Descriptor Scale"
          },
          "mildModerateImpairment": {
            "tool": "Faces Pain Scale",
            "alternative": "Iowa Pain Thermometer"
          },
          "severeImpairment": {
            "tool": "PAINAD Scale",
            "indicators": [
              "Breathing pattern",
              "Negative vocalization",
              "Facial expression",
              "Body language",
              "Consolability"
            ]
          }
        },
        {
          "step": 3,
          "title": "Comprehensive Pain Assessment",
          "description": "For all positive screens",
          "components": {
            "location": "Body diagram",
            "intensity": "Current, worst, best, average",
            "quality": "Sharp, dull, burning, aching",
            "timing": "Onset, duration, pattern",
            "aggravating": "Movement, position, activities",
            "alleviating": "Rest, heat, cold, medications",
            "impact": "Sleep, mood, function, QOL"
          }
        },
        {
          "step": 4,
          "title": "Multimodal Management",
          "description": "Combine approaches",
          "nonPharmacologic": [
            "Heat/cold therapy",
            "Positioning",
            "Massage",
            "Relaxation techniques",
            "Distraction/music",
            "Physical therapy",
            "TENS unit"
          ],
          "pharmacologic": {
            "mild": "Acetaminophen 650-1000mg q6h (max 3g/day)",
            "moderate": "Add tramadol 25-50mg q6h",
            "severe": "Opioids - start low dose, short-acting",
            "neuropathic": "Gabapentin, duloxetine",
            "topical": "Lidocaine patch, capsaicin, diclofenac gel"
          }
        },
        {
          "step": 5,
          "title": "Reassessment",
          "description": "Evaluate effectiveness",
          "timing": {
            "oralMeds": "1 hour after",
            "IVMeds": "30 minutes after",
            "nonPharm": "30-60 minutes after"
          },
          "document": [
            "Pain score change",
            "Functional improvement",
            "Side effects",
            "Patient satisfaction"
          ]
        }
      ],
      "specialConsiderations": [
        "Start low, go slow with medications",
        "Monitor for sedation, confusion",
        "Assess renal function for dosing",
        "Consider bowel regimen with opioids",
        "Regular vs PRN scheduling"
      ]
    }
